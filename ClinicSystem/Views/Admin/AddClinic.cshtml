@model ClinicSystem.View_Models.AddClinicViewModel

@{
    ViewData["Title"] = "Add Clinic";
}

<h2>Add Clinic</h2>

<form asp-action="AddClinic" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Clinic</button>
</form>


